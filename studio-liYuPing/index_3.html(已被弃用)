<script src="js/jquery-3.2.1.min.js"></script>
<script src="js/mui.min.js"></script>
<script src="js/swiper.min.js"></script>
<script src="js/stickUp.min.js"></script>
<script>
    //弹出窗事件
    $('.mui-table-view').on('click','li',function(){
        var v=$(this).find('span').text();
        mui('#popover').popover('toggle');//show hide toggle
        mui.alert('点击了：'+v)
    })
    $('.tl-nav').on('click','a',function(){
        $('.tl-nav').find('a').removeClass('active')
        $(this).addClass('active'),
    $('html, body').animate({scrollTop: $('#'+$(this).attr('data-id')).offset().top-20}, 1000)
    })
    $(function() {
    jQuery(function($) {
        $(document).ready( function() {
            //为 '.navbar-wrapper' class 启用stickUp插件
            $('.navbar-wrapper').stickUp();
        });
    });

        $(window).scroll(function () {
            var a = $(document).scrollTop();
            for (var i=0;i<$('.tl-leibiao').length;i++){
                 var b=$(".tl-leibiao").eq(i).offset().top-44;
                if(a>b){
                    $('.tl-nav').find('a').removeClass('active')
                    $('.tl-nav').find('a').eq(i).addClass('active'),
                    $(".tl-leibiao").eq(i).find('.tl-zuoye-span').addClass('active')
                }else {
                    if (i==0){

                    } else {
                        $('.tl-nav').find('a').eq(i).removeClass('active')
                    }
                    $(".tl-leibiao").eq(i).find('.tl-zuoye-span').removeClass('active')
                }
            }



            // console.log('滚动条像素:' + a + 'px');
        })
    })
</script>
